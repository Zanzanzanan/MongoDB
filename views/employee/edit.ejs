<!DOCTYPE html>
<html>
  <head>
    <title>Edit Employee</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/employees">â¬… Back to Employee List</a></h3>
      <h1>Edit Employee</h1>

      <!-- Show error as a popup alert (Only if error is defined) -->
      <% if (typeof error !== "undefined" && error) { %>
        <script>alert("<%= error %>");</script>
      <% } %>

      <form action="/employees/update/<%= employee._id%>" method="post">
        <label>Name:</label>
        <input type="text" name="name" value="<%= employee.name %>" required />

        <label>Address:</label>
        <textarea name="address" required><%= employee.address %></textarea>

        <label>Position:</label>
        <input type="text" name="position" value="<%= employee.position %>" required />

        <label>Salary ($ per year):</label>
        <input type="number" name="salary" value="<%= employee.salary %>" required />

        <button type="submit" class="save-btn">Update Employee</button>
      </form>
    </div>
  </body>
</html>
