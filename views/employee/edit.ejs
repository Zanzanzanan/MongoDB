<!DOCTYPE html>
<html>
  <head>
    <title>Edit Employee</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <h3><a href="/employees">⬅ Back to Employee List</a></h3>
      <div class="form-container">
        <h1>Edit Employee</h1>

        <!-- Show error as a popup alert -->
        <% if (typeof error !== "undefined" && error) { %>
          <script>
            alert("<%= error %>");
          </script>
        <% } %>

        <form action="/employees/update/<%= employee._id%>" method="post">
          <label>Name</label>
          <input type="text" name="name" value="<%= employee.name %>" required/>

          <label>Address</label>
          <textarea name="address" required><%= employee.address %></textarea>

          <label>Position</label>
          <input type="text" name="position" value="<%= employee.position %>" required/>

          <label>Salary</label>
          <input type="number" name="salary" value="<%= employee.salary %>" required/>

          <button type="submit" class="save-btn">✅ Update</button>
        </form>
      </div>
    </div>
  </body>
</html>
